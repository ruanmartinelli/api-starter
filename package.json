{
  "name": "api-starter",
  "version": "2.0.0",
  "license": "MIT",
  "description": "Starting point for a Node.js API",
  "author": "Ruan Martinelli <martinelliruan@gmail.com>",
  "scripts": {
    "start": "NODE_ENV=production npm run database:latest && NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development ./node_modules/.bin/nodemon index.js --ignore docs/",
    "test": "npm run lint:fix && NODE_ENV=test ava test/index.js --verbose",
    "test:coverage": "NODE_ENV=test nyc ava test/index.js && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test:watch": "NODE_ENV=test ava test/index.js --verbose --watch",
    "lint": "./node_modules/.bin/standard src/**",
    "lint:fix": "./node_modules/.bin/standard  src/** --fix",
    "docs": "./node_modules/.bin/apidoc -i src/ -o docs",
    "docs:serve": "npm run docs && npm run dev",
    "database:latest": "./node_modules/.bin/knex migrate:latest",
    "database:rollback": "./node_modules/.bin/knex migrate:rollback"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.17.1",
    "chalk": "^1.1.3",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "express-query-boolean": "^1.0.0",
    "faker": "^4.1.0",
    "firebase": "^4.5.0",
    "joi": "^11.1.1",
    "jsonwebtoken": "^7.4.1",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "morgan": "^1.8.1",
    "mysql": "^2.13.0",
    "node-schedule": "^1.2.5",
    "scrypt-for-humans": "^2.0.5",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "ava": "^0.19.1",
    "codecov": "^3.0.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.3.0",
    "standard": "^10.0.2",
    "supertest": "^3.0.0"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "engines": {
    "node": "7.10.1"
  }
}
